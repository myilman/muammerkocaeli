#include <stdio.h>
#include <stdlib.h>
//This program prints X on a square for given diagonal length

int main()
{
    int i,j,x;
    printf("Enter the Length of X\n");
    scanf("%d", &x);
    for(i=0;i<x;i++){
    for(j=0;j<x;j++){
    if(i==j)
    printf("x");
    else if (j==x-i-1)
    printf("x");
    else
    printf(" ");
    }
    printf("\n");
    }
    return 0;
}
